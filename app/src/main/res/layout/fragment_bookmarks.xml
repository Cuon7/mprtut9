<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".BookmarksFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmen1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image_medium"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/medium"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="134dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </ScrollView>


        <ScrollView
            android:id="@+id/scrollView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@+id/scrollView3"
            app:layout_constraintTop_toTopOf="@+id/scrollView3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image_baomoi"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/baomoi"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="134dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Báo Mới"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </ScrollView>

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="@+id/scrollView3"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image_bluezone"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bluezone"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="134dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BlueZone"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </ScrollView>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toEndOf="@+id/scrollView4"
            app:layout_constraintTop_toBottomOf="@+id/scrollView5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image_zing"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/zingmp3"
                    android:onClick="onClick"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="134dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zing MP3"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </ScrollView>

        <ScrollView
            android:id="@+id/scrollViewWhatEver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="352dp"
            app:layout_constraintStart_toEndOf="@+id/scrollView3"
            app:layout_constraintTop_toTopOf="@+id/scrollView3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/image_bonus"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bonus"
                    android:onClick="onClick"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="134dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bonus"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>